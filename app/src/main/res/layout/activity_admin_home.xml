<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AdminHome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_adminhomeview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="View Booking"
            android:background="@drawable/btn_bg"
            android:backgroundTint="@color/colorAccent"
            android:padding="15dp"/>

        <Button
            android:id="@+id/btn_adminhomedelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_adminhomeview"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="Delete Booking"
            android:background="@drawable/btn_bg"
            android:backgroundTint="@color/colorAccent"
            android:padding="15dp"/>

        <Button
            android:id="@+id/btn_adminhomefeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_adminhomedelete"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="Feedback"
            android:background="@drawable/btn_bg"
            android:backgroundTint="@color/colorAccent"
            android:padding="15dp"/>

        <Button
            android:id="@+id/btn_adminhomesignout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/btn_adminhomefeedback"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="SIGN OUT"
            android:background="@drawable/btn_bg"
            android:backgroundTint="@color/colorAccent"
            android:padding="15dp"/>

    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F5F2"
    tools:context=".RentSlot">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="NAME: "
                    android:textColor="#151D3B"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/et_rentname"
                    android:layout_width="292dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:inputType="textPersonName"
                    android:textColor="#151D3B"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ADDRESS: "
                    android:textColor="#151D3B"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/et_rentaddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textLongMessage"
                    android:textColor="#151D3B"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="SLOT ID: "
                    android:textColor="#151D3B"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/et_rentslotid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:inputType="number"
                    android:textColor="#151D3B"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_rent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:clickable="true"
                    android:background="@drawable/btn_bg"
                    android:backgroundTint="#151D3B"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:text="Rent"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_rentreset"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="100dp"
                    android:clickable="true"
                    android:background="@drawable/btn_bg"
                    android:backgroundTint="#151D3B"
                    android:textColor="@color/white"
                    android:padding="10dp"                    android:text="Reset"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
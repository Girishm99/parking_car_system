<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F5F2"
    tools:context=".AdminDeleteMacdetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lin_deltitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Machanic Details"
                android:textColor="#222831"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_del"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_deltitle"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Machanic ID :"
                android:textColor="#222831"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/et_del"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:inputType="numberDecimal" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin_del"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/btn_deleteDATA"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/btn_bg"
                android:backgroundTint="#222831"
                android:text="Delete"
                android:textColor="#EFF7E1" />

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/btn_bg"
                android:backgroundTint="#222831"
                android:text="Reset"
                android:textColor="#EFF7E1" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
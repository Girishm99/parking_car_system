<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_home">

    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/mobile_navigation" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_addbooking"
            android:layout_width="205dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="93dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="93dp"
            android:background="@color/colorAccent"
            android:text="Add Booking"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_viewbooking"
            android:layout_width="205dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_addbooking"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="93dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="93dp"
            android:background="@color/colorAccent"
            android:text="View Booking"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_deletebooking"
            android:layout_width="205dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_viewbooking"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="93dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="93dp"
            android:background="@color/colorAccent"
            android:text="Delete Booking"
            android:textColor="@color/white"
            android:textSize="20dp" />


        <Button
            android:id="@+id/btn_feedback"
            android:layout_width="205dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_deletebooking"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="93dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="93dp"
            android:background="@color/colorAccent"
            android:text="FeedBack"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_slotrent"
            android:layout_width="205dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_feedback"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="95dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="90dp"
            android:background="@color/colorAccent"
            android:text="Rent Slot"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_slotview"
            android:layout_width="205dp"
            android:layout_height="50dp"
            android:layout_below="@+id/btn_slotrent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="93dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="93dp"
            android:background="@color/colorAccent"
            android:text="view Slot"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>


</RelativeLayout>